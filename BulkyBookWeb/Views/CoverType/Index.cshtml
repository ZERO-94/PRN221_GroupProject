@model PaginationViewModel<CoverType>


@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>
<div class="w-100 d-flex justify-content-between my-3">
    <form class="d-flex my-2 w-50"
          asp-action="Index"
          method="get">
        <input class="form-control me-sm-2" type="search" name="search" placeholder="Search" value="@ViewBag.SearchTerm">
        <button class="btn btn-secondary my-sm-0" type="submit">Search</button>
    </form>
    <div class="mb-0 d-flex align-items-center">
        <a class="align-items-center btn edit-btn py-2" asp-controller="CoverType" asp-action="Create">Create cover type</a>
    </div>
</div>
<table class="table table-bordered table-striped mt-4">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CoverType obj in Model.Data)
        {
            <tr>
                <td>@obj.Id.ToString()</td>
                <td>@obj.Name</td>
                <td>@obj.Description</td>
                <td class="col-3">
                    <a class="edit-btn" asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                    <a class="delete-btn" asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation example">
    <ul class="pagination">
        @for (var i = 1; i <= Model.TotalPage; i++)
        {
            <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a> </li>
        }
    </ul>
</nav>

