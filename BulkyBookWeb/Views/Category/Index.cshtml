@model IEnumerable<Category>

@{
	ViewData["Title"] = "Index";
}

<div class="w-100 d-flex justify-content-between my-3">
	<h1>Categories</h1>
	<div class="btn-group">
		<a class="rounded-3 bg-light text-dark fw-semibold text-decoration-none d-flex justify-content-center align-items-center px-2" asp-controller="Category" asp-action="Create">Create category</a>
	</div>
</div>

	<form class="d-flex my-2 w-100"
		  action="@(Url.Action("Search","Category"))"
		  method="get">
		<input class="form-control me-sm-2" type="search" name="search" placeholder="Search" value="@ViewBag.SearchTerm">
		<button class="btn btn-secondary my-sm-0" type="submit">Search</button>
	</form>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Created Time
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    @obj.CreatedDateTime.ToLocalTime()
                </td>
                <td>
                    <a class="edit-btn" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                    <a class="delete-btn" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
