@model List<OrderHeader>
@{
    ViewData["Title"] = "Index";
}

<div class="w-100 d-flex justify-content-between my-3">
    <h1>Orders</h1>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Order Date
            </th>
            <th>
                Shipping Date
            </th>
            <th>
                Order Total
            </th>
            <th>
                Order Status
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Address
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.CustomerName
                </td>
                <td>
                    @obj.OrderDate
                </td>
                <td>
                    @obj.ShippingDate
                </td>
                <td>
                    @obj.OrderTotal
                </td>
                <td>
                    @obj.OrderStatus
                </td>
                <td>
                    @obj.PhoneNumber
                </td>
                <td>
                    @($"{obj.StreetAddress}, {obj.City}")
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
