@using Microsoft.AspNetCore.Identity
@model OrderHeader
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
	ViewData["Title"] = "Index";
}

<div class="w-100 d-flex justify-content-between my-3">
	<h1>Order Detail</h1>
	<div class="d-flex align-items-center">
		<a class="edit-btn" asp-controller="Order" asp-action="Index">Back to Order List</a>
	</div>
</div>
@if (SignInManager.IsSignedIn(User))
{
	<div class="row">
		<div class="col-6">
			<dl class="row">
				<dt class="col-sm-3">
					Name:
				</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.CustomerName)
				</dd>
				<dt class="col-sm-3">
					Phone number:
				</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.PhoneNumber)
				</dd>
				<dt class="col-sm-3">
					Order date:
				</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.OrderDate)
				</dd>
				
				<dt class="col-sm-3">
					Status:
				</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.OrderStatus)
				</dd>

				<dt class="col-sm-3">
					Postal code:
				</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.PostalCode)
				</dd>
			</dl>
		</div>
		<div class="col-6">
			<dl class="row">
				<dt class="col-sm-3">
					Address:
				</dt>
				<dd class="col-sm-9">
					@Model.StreetAddress, @Model.State, @Model.City
				</dd>
				<dt class="col-sm-3">
					Shipping date:
				</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.ShippingDate)
				</dd>
				<dt class="col-sm-3">
					Tracking code:
				</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.TrackingNumber)
				</dd>
				<dt class="col-sm-3">
					Carrier:
				</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.Carrier)
				</dd>
			</dl>
		</div>
	</div>
	
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Product
				</th>
				<th>
					Description
				</th>
				<th>
					ISBN
				</th>
				<th>
					Author
				</th>
				<th>
					Count
				</th>
				<th>
					Price
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.OrderDetails)
			{
				<tr>
					<td>
						@obj.Product.Title
					</td>
					<td>
						@obj.Product.Description
					</td>
					<td>
						@obj.Product.ISBN
					</td>
					<td>
						@obj.Product.Author
					</td>
					<td>
						@obj.Count
					</td>
					<td> 
						@obj.Price
					</td>
				</tr>

			}
		</tbody>
	</table>
	<div class="d-flex justify-content-between mt-4">
		<div>
			@if (Model.OrderStatus == "Ordered" && User.IsInRole("Customer"))
			{
				<form asp-action="CancelOrder" asp-controller="Order" method="post">
					<input hidden asp-for="Id" />
					<input type="submit" value="Cancel order" class="btn btn-danger" />
				</form>
			}
		</div>
			<div>
				<h4>
					Order total: $@Model.OrderTotal
				</h4>
			</div>
		</div>
}
