@model BulkyBook.BusinessObject.Models.Product

@{
    ViewData["Title"] = "Delete";
}


<div class="product-delete-page">
    <h1 style="color: black; text-shadow: none">Delete</h1>

    <h3 style="color: black; text-shadow: none">Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="row text-black">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ISBN):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ISBN)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Author):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Author)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageUrl):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImageUrl)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CoverType):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CoverType.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-center align-items-center">
                <div class="cancel-btn">
                    <a asp-action="Index">Back to List</a>
                </div>
                <div>
                    <input type="submit" value="Delete" class="action-btn" />
                </div>
            </div>
        </form>
    </div>
</div>

