@model BulkyBook.BusinessObject.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-between">
    <h1>Delete</h1>
    <div class="mb-0 d-flex align-items-center">
        <a class="align-items-center btn edit-btn py-2" asp-controller="Category" asp-action="Index">Back to list</a>
    </div>
</div>
<h3 class="mt-4">Are you sure you want to delete this?</h3>
<h4>Product</h4>

<div class="product-delete-page">
    <div>
        <hr class="mb-4"/>
        <div class="row mt-4">
            <div class="col-4">
                <img id="product-image" src="@Model.ImageUrl"/>
            </div>
            <div class="col-8">
                <dl class="row text-black d-flex flex-column justify-content-center h-100">
                    <div class="row">
                    <dt class="col-sm-3">
                        Title:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    </div>
                        <div class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Description):
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    </div >
                        <div class="row">
                        <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.ISBN):
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.ISBN)
                    </dd>
                    </div>
                        <div class="row">
                        <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Author):
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Author)
                    </dd>
                    </div class="row">
                    <div class="row">
                        <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Price):
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    </div>
                    <div class="row">
                        <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Category):
                    </dt>
                    <dd class="col-sm-9">
                        @(Model.Category != null ? Model.Category.Name : "N/A")
                    </dd>
                    </div class="row">
                    <div class="row">
                    <dt class="col-sm-3">
                        Cover type:
                    </dt>
                    <dd class="col-sm-9">
                        @(Model.CoverType != null ? Model.CoverType.Name : "N/A")
                    </dd>
                    </div>
                    
                </dl>
            </div>
        </div>
       

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>
