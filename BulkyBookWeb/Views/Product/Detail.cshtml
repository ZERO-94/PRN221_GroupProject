@model Product

    <div class="card pt-4 container px-0">
        <div class="card-header bg-dark text-light ml-0  row py-3">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Title</h1>
                <p class="text-warning">by @Model.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-info pt-2" style="height:30px;">@Model.CoverType.Name</span>
                <span class="badge bg-warning pt-2" style="height:30px;">@Model.Category.Name</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    
                    <div class="col-12 col-lg-4 text-center">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                <div class="col-8 col-lg-8">

                    <div class="row pl-2">
                        <h5 class="text-muted">ISBN : @Model.ISBN</h5>
                    </div>

                    <div class="row pl-2">
                        <p class="text-secondary">@Html.Raw(Model.Description)</p>
                    </div>
                    <div class="d-flex" style="color:maroon; font-weight:bold">
                        <div class="p-1">
                            <div>Price:</div>
                        </div>
                        <div class="p-1">
                            <div>@Model.Price.ToString("c")</div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control h-100 d-flex align-items-center justify-content-center"  asp-action="Index">Back to Home</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <form asp-controller="ShoppingCart" asp-action="Add" method="post">
                            <input name="from" type="hidden" value="Detail" />
                            <input name="productId" type="hidden" value="@Model.Id" />
                            <input name="amount" type="hidden" value="1" />
                            <button class="btn btn-primary form-control py-3" type="submit" value="Add">Add to cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>