@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="mt-4">@ViewData["Title"]</h1>
<div>
    <span>New to Bulky? </span>
    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Click to sign up an account</a>
</div>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mt-2 d-flex justify-content-between" style="font-size:12px">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-2" style="background-color:#6C63FF">Log in</button>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6">
        <img src="~/images/NewFolder/undraw_login_re_4vu2.svg" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
